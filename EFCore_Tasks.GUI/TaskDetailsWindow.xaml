<Window x:Class="EFCore_Tasks.GUI.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EFCore_Tasks.GUI"
        Title="Task Details" Height="450" Width="800">
    <Grid>
        <StackPanel Name="stackPanelTasks" Orientation="Vertical">
            <TextBlock Text="{Binding SelectedTask.Description}" Margin="10" Width="675" />
            <TextBlock Text="{Binding SelectedTask.Title}" FontSize="20" FontWeight="Bold" Width="701" />
            <ItemsControl ItemsSource="{Binding TaskPoints}" Height="172" Width="688">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Content}" IsChecked="{Binding IsCompleted}" Margin="10" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </StackPanel>
    </Grid>
</Window>
